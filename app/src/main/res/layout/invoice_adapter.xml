<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:background="@color/purple_200"
    android:layout_height="wrap_content"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:gravity="start"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Client Company Name"
                android:textColor="#FFFFFF"

                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_weight="1"
                android:gravity="end"
                android:padding="5dp"
                android:text="â‚¹ 1,00,300.00 "
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:text="INV-00032 "
                android:textColor="#C0C2C3"

                android:textSize="12dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="13dp"
                android:id="@+id/txtpst"
                android:drawablePadding="7dp"
                android:textColor="#062137"
                android:drawableLeft="@drawable/ic_dot"
                android:background="@drawable/round_button"
                android:text="PAID" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:layout_marginBottom="7dp"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:text="Invoice Date :- 12/02/2021"
            android:textColor="#C0C2C3"
            android:layout_marginRight="10dp"
            android:textSize="12dp" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>