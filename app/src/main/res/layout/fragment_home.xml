<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/view"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This Month "
                    android:textColor="#2fc8e9"
                    android:textSize="18dp"
                    android:id="@+id/thism"
                    android:textStyle="bold"
                    android:background="@drawable/bottom_line_color"
                    android:padding="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Month "
                    android:textColor="#7B8081"
                    android:textSize="18dp"
                    android:id="@+id/prem"
                    android:layout_marginLeft="20dp"
                    android:textStyle="normal"
                    android:background="@drawable/bottom_line_gray"
                    android:padding="7dp"/>

            </LinearLayout>
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"

                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#2fc8e9">
                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:orientation="vertical">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Invoice Sent"
    android:textAllCaps="true"
    android:textSize="16dp"
    android:textStyle="bold"
    android:padding="3dp"
    android:textColor="#0E0B0B"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="224"
                            android:textAllCaps="true"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount"
                            android:textAllCaps="true"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:textColor="#0E0B0B"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₹ 14,74,845.00"
                            android:textAllCaps="true"
                            android:textSize="25dp"
                            android:drawableRight="@drawable/ic_circle_arrow"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:textColor="#FFFFFF"/>


                    </LinearLayout>



                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="#2fc8e9">
                    <LinearLayout
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:padding="7dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payments Received"
                            android:textAllCaps="true"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:textColor="#0E0B0B"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="179"
                            android:textAllCaps="true"
                            android:textSize="22dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:textColor="#FFFFFF"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount Received"
                            android:textAllCaps="true"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:textColor="#0E0B0B"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="₹ 8,43,845.00"
                            android:textAllCaps="true"
                            android:textSize="25dp"
                            android:drawableRight="@drawable/ic_circle_arrow"
                            android:textStyle="bold"
                            android:padding="3dp"
                            android:textColor="#FFFFFF"/>


                    </LinearLayout>



                </androidx.cardview.widget.CardView>




            </LinearLayout>
</HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Tracker"
                android:textColor="#2fc8e9"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bottom_line_color"
                android:padding="7dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="FEB 2020"
    android:padding="3dp"
    android:textColor="#9E9A9A"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹ 8,43,276.00"
                      android:fontFamily="sans-serif"
                        android:textSize="16dp"
                        android:drawableRight="@drawable/ic_circle_arrow_color"
                        android:padding="3dp"
                        android:textColor="#ffff"/>
                </LinearLayout>
                <View
                    android:layout_width="0.1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="match_parent"
                    android:background="#EAE8E8"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OVERALL 2020"
                        android:padding="3dp"
                        android:textColor="#9E9A9A"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹ 78,65,121.00"
                        android:fontFamily="sans-serif"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:drawableRight="@drawable/ic_circle_arrow_color"
                        android:padding="3dp"
                        android:textColor="#ffff"/>
                </LinearLayout>

            </LinearLayout>

            <com.hadiidbouk.charts.ChartProgressBar
            android:id="@+id/ChartProgressBar"
            android:layout_width="match_parent"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            app:hdBarCanBeClick="true"
            app:hdBarHeight="170dp"

            app:hdBarWidth="22dp"
            app:hdBarRadius="10dp"
            app:hdMaxValue="10"
            app:hdEmptyColor="@color/teal_200"
            app:hdProgressColor="@color/progress"
            app:hdProgressClickColor="@color/progress"
            app:hdPinBackgroundColor="@color/pin_background"
            app:hdPinTextColor="@color/white"
            app:hdPinPaddingBottom="5dp"
            app:hdBarTitleColor="@color/gray"
            app:hdBarTitleTxtSize="12sp"
            app:hdPinTxtSize="12sp"

            app:hdPinMarginTop="2dp"
                app:hdPinMarginStart="20dp"
            app:hdPinMarginBottom="15dp"
            app:hdPinMarginEnd="2dp"
            app:hdBarTitleMarginTop="0dp"
            app:hdPinDrawable="@drawable/ic_pin"
            app:hdProgressDisableColor="@color/progress_disable"
            app:hdBarTitleSelectedColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Transactions"
                android:textColor="#2fc8e9"
                android:textSize="18dp"

                android:textStyle="bold"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bottom_line_color"
                android:padding="7dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/list_trans"
                />
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>